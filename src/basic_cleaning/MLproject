name: basic_cleaning
conda_env: conda.yml

entry_points:
  main:
    parameters:

      input_artifact:
        description: The input artifact to be cleaned
        type: string

      output_artifact:
        description: The name for the output artifact
        type: string

      output_type:
        description: The type for the output artifact
        type: string
      
      output_description:
        description: The description for the output artifact
        type: string  
      
      min_price:
        description: Minimum price to filter the dataset
        type: float
      
      max_price:
        description: Maximum price to filter the dataset
        type: float


    command: >-
        python run.py  --input_artifact {input_artifact}  \
          --output_artifact {output_artifact}  \
          --output_type {output_type} \
          --output_description {output_description} \
          --min_price {min_price} \
          --max_price {max_price}

